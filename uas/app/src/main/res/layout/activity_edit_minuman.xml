<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityweb.EditActivityMinuman">
    <TextView
        android:id="@+id/tvIdMinuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Minuman : "
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvMinuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minuman : "
        android:layout_below="@id/tvIdMinuman"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga : "
        android:layout_below="@id/tvMinuman"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtIdMinuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:layout_toRightOf="@+id/tvIdMinuman"
        android:layout_alignBaseline="@+id/tvIdMinuman"/>

    <EditText
        android:id="@+id/edtMinuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Minuman"
        android:layout_alignBaseline="@+id/tvMinuman"
        android:layout_alignLeft="@+id/edtIdMinuman"/>

    <EditText
        android:id="@+id/edtHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Harga"
        android:layout_alignBaseline="@+id/tvHarga"
        android:layout_alignLeft="@+id/edtIdMinuman"
        android:inputType="date"/>

    <LinearLayout
        android:id="@+id/LinearlayoutMinuman2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvHarga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btUpdateMinuman2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/btDeleteMinuman2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <Button
            android:id="@+id/btBackGoMinuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>

    </LinearLayout>
</RelativeLayout>