<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_pesan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activityweb.EditActivityPesan">
    <TextView
        android:id="@+id/tvIdPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Kontak : "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembeli : "
        android:layout_below="@id/tvIdPesan"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvMakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan : "
        android:layout_below="@id/tvPesan"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvMinuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minuman : "
        android:layout_below="@id/tvMakanan"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtIdPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:layout_toRightOf="@+id/tvIdPesan"
        android:layout_alignBaseline="@+id/tvIdPesan"/>
    <EditText
        android:id="@+id/edtPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Pembeli"
        android:layout_alignBaseline="@+id/tvPesan"
        android:layout_alignLeft="@+id/edtIdPesan"/>
    <EditText
        android:id="@+id/edtMakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Makanan"
        android:layout_alignBaseline="@+id/tvMakanan"
        android:layout_alignLeft="@+id/edtIdPesan"/>
    <EditText
        android:id="@+id/edtMinuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Minuman"
        android:layout_alignBaseline="@+id/tvMinuman"
        android:layout_alignLeft="@+id/edtIdPesan"/>

    <LinearLayout
        android:id="@+id/LinearlayoutPesan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvMinuman"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btUpdatePesan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/btDeletePesan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <Button
            android:id="@+id/btBackGoPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>
</RelativeLayout>