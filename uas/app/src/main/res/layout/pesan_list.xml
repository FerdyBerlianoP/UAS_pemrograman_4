<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tvIdPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id"
            android:text="Id"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvPembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pembeli"
            android:text="Pembeli"
            android:layout_below="@id/tvIdPesan"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tvMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Makanan"
            android:text="Makanan"
            android:layout_below="@id/tvPembeli"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tvMinuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Minuman"
            android:text="Minuman"
            android:layout_below="@id/tvMakanan"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <View
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>